<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="320dp"
    android:filterTouchesWhenObscured="true"
    android:layout_height="234dp">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_edge_layout"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:text="신규 고객"
                android:textSize="20dp"
                android:textColor="#4676FE"
                android:paddingTop="22dp"
                android:paddingLeft="20dp"
                android:paddingBottom="6dp"
                android:gravity="left|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phoneTxt"
                android:text="폰번호"
                android:textSize="16dp"
                android:textColor="#32373F"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:paddingBottom="16dp"
                android:gravity="left|center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="18dp"
                android:paddingTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_close">
            </ImageButton>

        </LinearLayout>



    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameTxt"
            android:textSize="16dp"
            android:textColor="#191B1E"
            android:text="하단의 등록 버튼을 통해 손쉽게 신규 물건 또는 손님 등록이 가능합니다."
            android:alpha="0.87"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:paddingRight="54dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/itemTxt"
            android:textSize="16dp"
            android:textColor="#191B1E"
            android:text=""
            android:alpha="0.87"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/contentTxt"
            android:textSize="16dp"
            android:textColor="#191B1E"
            android:text=""
            android:alpha="0.87"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 하단 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/item_register_button"
            android:text="신규 물건등록"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bottom_left_radius"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            />

        <Button
            android:id="@+id/customer_register_button"
            android:text="신규 손님등록"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bottom_right_radius"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            />
    </LinearLayout>
    <!--// 하단 버튼 -->
</LinearLayout>
